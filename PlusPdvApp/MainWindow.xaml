<Window x:Class="PlusPdvApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlusPdvApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PlusPdv App"
        Height="650"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Normal">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#FFE0E0E0">
            <Border Width="150"
                    Height="150"
                    Background="{DynamicResource PrimaryHueMidBrush}"
                    CornerRadius="75"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <TextBlock Text="A"
                           Foreground="White"
                           FontSize="72"
                           FontWeight="Light"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,5" />
            </Border>
        </Grid>

        <Grid Grid.Column="1" Background="{DynamicResource PrimaryHueMidBrush}">
            <Border x:Name="LoginPanel"
                    Background="Transparent"
                    Width="350"
                    Padding="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                <StackPanel>
                    <TextBlock Text="PlusPdvApp"
                               Foreground="White"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <TextBox x:Name="StoreTextBox"
                             materialDesign:HintAssist.Hint="EMPRESA"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             Text="{Binding StoreId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10"
                             FontSize="14"
                             Foreground="White"
                             BorderBrush="White"
                             materialDesign:HintAssist.Foreground="White"
                             materialDesign:TextFieldAssist.UnderlineBrush="White"/>

                    <TextBox x:Name="UsernameTextBox"
                             materialDesign:HintAssist.Hint="USUÁRIO"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10"
                             FontSize="14"
                             Foreground="White"
                             BorderBrush="White"
                             materialDesign:HintAssist.Foreground="White"
                             materialDesign:TextFieldAssist.UnderlineBrush="White"/>

                    <TextBox x:Name="PasswordTextBox"
                             materialDesign:HintAssist.Hint="SENHA"
                             Style="{StaticResource MaterialDesignFilledTextBox}"
                             Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10"
                             FontSize="14"
                             Foreground="White"
                             BorderBrush="White"
                             materialDesign:HintAssist.Foreground="White"
                             materialDesign:TextFieldAssist.UnderlineBrush="White"/>

                    <TextBlock x:Name="LoginStatusTextBlock"
                               Text="{Binding LoginStatusMessage}"
                               TextWrapping="Wrap"
                               Margin="5,15"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="#FFDDDDDD"
                               FontWeight="Bold"/>

                    <Button Content="LOGIN"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoginEnabled}"
                            Margin="0,20"
                            Width="280"
                            Height="40"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="White"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="0"
              Grid.ColumnSpan="2"
              x:Name="ProductSearchGrid"
              Visibility="{Binding ProductSearchVisibility}"
              Background="White"
              Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding LogoutCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,20,0"
                    Grid.Row="0"
                    Grid.ZIndex="1">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Logout"
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center" />
                    <TextBlock Text="Sair" FontWeight="Bold" />
                </StackPanel>
            </Button>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="20,0"
                        HorizontalAlignment="Center">

                <TextBox materialDesign:HintAssist.Hint="Nome do Produto"
                         Width="250"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <ComboBox Margin="20,0,0,0"
                          materialDesign:HintAssist.Hint="Ordenar por"
                          Width="200"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          ItemsSource="{Binding SortOrderOptions}"
                          SelectedItem="{Binding SelectedSortOrder}">
                </ComboBox>

                <Button Content="Buscar Produto"
                        Width="150"
                        Margin="20,0,0,0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{Binding SearchProductsCommand}"
                        Foreground="White"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <ProgressBar Height="6"
                             IsIndeterminate="True"
                             Visibility="{Binding IsSearching, Converter={StaticResource BoolToVis}}"
                             VerticalAlignment="Top"
                             Margin="20,0" />

                <TextBlock x:Name="ProductStatusTextBlock"
                           Text="{Binding ProductStatusMessage}"
                           TextWrapping="Wrap"
                           Margin="5,10,5,5"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesign.Brush.Error}"
                           FontWeight="Bold"/>
            </Grid>

            <DataGrid Grid.Row="3"
                      x:Name="ProductDataGrid"
                      IsReadOnly="True"
                      Margin="20"
                      ItemsSource="{Binding Products}"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Fabricante" Binding="{Binding Manufacturer.Name}" Width="*"/>
                    <DataGridTextColumn Header="Fornecedor" Binding="{Binding Supplier.Name}" Width="*"/>
                    <DataGridTextColumn Header="Seção" Binding="{Binding Section.Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
